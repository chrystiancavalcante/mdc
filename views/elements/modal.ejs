<div class="modal fade bd-modal-lg" id="Modal" tabindex="-1" role="dialog" aria-labelledby="white" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title col-sm-12 ">Cadastro</h1>
            </div>
            <div class="modal-body">
                <form name="cadastroForm" method="get" action=".">
                    <div class="row">
                        <div class="col-8">
                            <label class="for">*Nome</label>
                            <input name="nome" id="nome" type="text" class="form-control" ng-model="cadastro.nome" required ng-required="true" ng-minlength="5"
                                placeholder="Nome">
                        </div>
                        <div class="col-4">
                            <label class="for">*Cep</label>
                            <input name="cep" id="cep" value="" size="10" maxlength="9" class="form-control" type="text" ng-model="cadastro.cep" placeholder="Digite o CEP"
                            required ng-required="true" ng-pattern="/^\d{5}-\d{3}$/">

                        </div>
                        <div class="form-group col-5">
                            <label class="for">*Estado</label>
                            <input nome: "uf" class="form-control" id="uf" size="2" ng-model="cadastro.uf" placeholder="Estado" required ng-required="true">

                        </div>
                        <div class="col-7">
                            <label class="for">*Cidade</label>
                            <input name="cidade" id="cidade" size="40" type="text" class="form-control input" id="cidade" size="40" ng-model="cadastro.cidade"
                            required ng-required="true" placeholder="Cidade">
                        </div>
                        <div class="col-12">
                            <label class="for">*Endereço</label>
                            <input name="rua" id="rua" size="60" type="text" class="form-control input" id="rua" size="60" ng-model="cadastro.bairro"
                            required ng-required="true" placeholder="Endereço">
                        </div>
                    </div>
                    <br>
                </form>

                <div ng-show="cadastroForm.nome.$error.required && cadastroForm.nome.$dirty" ng-messages="cadastroForm.nome.$error" class="alert alert-danger">
                    <div ng-message="required">
                        Por favor, preencha o campo Nome!
                    </div>
                    <div ng-message="minlength">
                        O campo nome deve ter no mínimo 5 caracteres.
                    </div>
                </div>
                <div ng-show="cadastroForm.rua.$error.required && cadastroForm.rua.$dirty" class="alert alert-danger">
                    <div ng-message="required">
                        Por favor, preencha o campo Endereço!
                    </div>
                </div>
                <div ng-show="cadastroForm.cep.$error.required && cadastroForm.cep.$dirty" class="alert alert-danger">
                    <div ng-message="required">
                        Por favor, preencha o campo CEP!
                    </div>
                </div>
                <div ng-show="cadastroForm.cep.$error.pattern" class="alert alert-danger">
                    <div ng-message="required">
                        O campo CEP deve ter o formato 99999-999.
                    </div>
                </div>
                <div ng-show="cadastroForm.cidade.$error.required && cadastroForm.cidade.$dirty" class="alert alert-danger">
                    <div ng-message="required">
                        Por favor, preencha o campo Cidade!
                    </div>
                </div>
                <div ng-show="cadastroForm.uf.$error.required && cadastroForm.uf.$dirty" ng-messages="cadastroForm.uf.$error" class="alert alert-danger">
                    <div ng-message="required">
                        Por favor, preencha o campo Estado!
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-outline-success" ng-click="adicionarCadastro(cadastro)" ng-disabled="cadastroForm.$invalid">Salvar</button>
                </div>
                <label class="for">
                        Por favor, preencha os campos requeridos (*) pois pode ser que haja divergências nos dados da busca Cep.
                 </label>
            </div>
            
        </div>
    </div>
</div>